# Choose ONE provider (OpenAI or Ollama). OpenAI is simplest.
OPENAI_API_KEY=sk-REPLACE
OPENAI_MODEL=gpt-4o-mini


# For local ollama (optional): set USE_OLLAMA=true and model name
USE_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b-instruct


# Embeddings: OpenAI or text-embedding-3-small works great
EMBEDDING_MODEL=text-embedding-3-small


# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=docs


# Chunking
CHUNK_SIZE=800
CHUNK_OVERLAP=100